{
    "manifest_version": 3,
    "name": "LeetCode Auto Saver",
    "version": "2.0",
    "description": "Auto save accepted LeetCode solutions with difficulty-based organization",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "LeetCode Auto Saver",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "https://leetcode.com/*"
    ]
}